<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDemoF.Views.registrar"
              Background="#112B47">
    <ContentPage.Content>
        <Grid RowSpacing="{OnPlatform iOS=20, Android=20}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
       
            <StackLayout Grid.Row="1" HorizontalOptions="Center"  Orientation="Vertical">
                <Label
                    Text="Registrar Usuario"
                    TextColor="Gray"
                    FontSize="{OnPlatform Android=50,iOS=23}"
                    WidthRequest="300"
                    FontAttributes="Bold, Italic"
                    XAlign="Center"
                    />
            </StackLayout>
            <StackLayout Grid.Row="2" HorizontalOptions="Center" WidthRequest="{OnPlatform iOS=300,Android=300}" Orientation="Vertical">

                <Label
                    Text="Nombre : "
                    TextColor="Gray"
                    FontSize="{OnPlatform Android=20}"
                />
                <Frame
                HasShadow="{OnPlatform Android=true, iOS=false}"
                Padding="{OnPlatform Android=0, iOS=0}"
                CornerRadius="{OnPlatform Android=7}"
                >
                    <Entry
                    Placeholder="Ingrese el nombre"
                    MaxLength="25"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    FontSize="{OnPlatform Android=20, iOS=16}"
                    x:Name="txtnombre"
                    />

                </Frame>
                <Label
                    Text=""
                    TextColor="Red"
                    FontSize="{OnPlatform Android=15,iOS=23}"
                    WidthRequest="300"
                    x:Name="lblmensajenombre"
                    />

            </StackLayout>
            <StackLayout Grid.Row="3" HorizontalOptions="Center" WidthRequest="{OnPlatform iOS=300,Android=300}" Orientation="Vertical">

                <Label
                    Text="Apellido : "
                    TextColor="Gray"
                    FontSize="{OnPlatform Android=20}"
               
                />
                <Frame
                HasShadow="{OnPlatform Android=true, iOS=false}"
                Padding="{OnPlatform Android=0, iOS=0}"
                CornerRadius="{OnPlatform Android=7}"
                >
                    <Entry
                    Placeholder="Ingrese el apellido"
                    MaxLength="25"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    FontSize="{OnPlatform Android=20, iOS=16}"
                    x:Name="txtapellido"
                    />

                </Frame>
                <Label
                    Text=""
                    TextColor="Red"
                    FontSize="{OnPlatform Android=15,iOS=23}"
                    WidthRequest="300"
                    x:Name="lblmensajeapellido"
                    />

            </StackLayout>
          
            <StackLayout Grid.Row="4" HorizontalOptions="Center" WidthRequest="{OnPlatform iOS=300,Android=300}" Orientation="Vertical">
                <Label
                    Text="Correo : "
                    TextColor="Gray"
                    FontSize="{OnPlatform Android=20}"
               
                    />
                <Frame
                HasShadow="{OnPlatform Android=true, iOS=false}"
                Padding="{OnPlatform Android=0, iOS=0}"
                CornerRadius="{OnPlatform Android=7}"
                >
                    <Entry
                    Placeholder="Correo"
                    FontSize="{OnPlatform Android=20, iOS=16}"
                    x:Name="txtcorreo"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    />
                    

                </Frame>
                <Label
                    Text=""
                    TextColor="Red"
                    FontSize="{OnPlatform Android=15,iOS=23}"
                    WidthRequest="300"
                    x:Name="lblmensajecorreo"
                    />

            </StackLayout>
            <StackLayout Grid.Row="5" HorizontalOptions="Center" WidthRequest="{OnPlatform iOS=300,Android=300}" Orientation="Vertical">
                <Label
                    Text="Contraseña : "
                    TextColor="Gray"
                    FontSize="{OnPlatform Android=20}"
                    />
                <Frame
                HasShadow="{OnPlatform Android=true, iOS=false}"
                Padding="{OnPlatform Android=0, iOS=0}"
                CornerRadius="{OnPlatform Android=7}"
                >
                    <Entry
                    Placeholder="Ingrese la contraseña"
                    MaxLength="25"
                    IsPassword="True"
                    FontSize="{OnPlatform Android=20, iOS=16}"
                    x:Name="txtpassword"
                    PlaceholderColor="Gray"
                    TextColor="Black"    
                    />
                    
                </Frame>
                <Label
                    Text=""
                    TextColor="Red"
                    FontSize="{OnPlatform Android=15,iOS=23}"
                    WidthRequest="300"
                    x:Name="lblmensajeclave"
                    />

            </StackLayout>
 
            <StackLayout Grid.Row="6" HorizontalOptions="Center" WidthRequest="{OnPlatform iOS=200,Android=300}" Orientation="Vertical">
               
                <Button Text="Registrar"
                        TextColor="White"
                        FontSize="{OnPlatform Android=15, iOS=12}"
                        BackgroundColor="Transparent"
                        BorderColor="ForestGreen"
                        BorderWidth="1.5"
                        CornerRadius="50"
                        Clicked="store"
                        />
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>